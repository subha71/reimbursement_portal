<h1 class="text-center">Welcome to the Employee Portal</h1>

<% if user_signed_in? %>
  <div class="d-flex justify-content-center mt-4">
    <%= link_to 'Manage Companies', companies_path, class: 'btn btn-primary mx-2' %>
    <%= link_to 'Manage Employees', employees_path, class: 'btn btn-secondary mx-2' %>
    <%= link_to 'Manage Reimbursements', reimbursements_path, class: 'btn btn-success mx-2' %>
  </div>
  <% else %>
  <div class="d-flex justify-content-center mt-4">
    <%= link_to 'Login with Google', '/auth/google_oauth2', class: 'btn btn-outline-primary mx-2' %>
  </div>
<% end %>
